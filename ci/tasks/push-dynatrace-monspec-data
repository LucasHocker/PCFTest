#!/bin/sh

set -e

echo "configuring Dynatrace CLI with $apitoken and $tenanthost and enabling debug to show Dynatrace API calls"

python /dtcli/dtcli.py config apitoken $apitoken tenanthost $tenanthost debug 1
export NEXT_APP_COLOR=$(cat ./current-app-info/next-app.txt)
#export monspecserviceenvironment=SampleJSonService/Production-Green
eval monspecserviceenvironment=$monspecserviceenvironment
echo "Pushing Dynatrace monspec data for $monspecserviceenvironment after waiting 60s for data to hit Dynatrace"
sleep 60
python /dtcli/dtcli.py monspec push ./PivotalDevOpsTutorial/ci/smplmonspec.json ./PivotalDevOpsTutorial/ci/smplpipelineinfo.json $monspecserviceenvironment 180 60